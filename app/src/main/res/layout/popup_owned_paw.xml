<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_horizontal_padding"
        android:layout_marginTop="@dimen/screen_horizontal_padding"
        android:layout_marginEnd="@dimen/screen_horizontal_padding"
        android:layout_marginBottom="@dimen/screen_horizontal_padding"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:paddingRight="@dimen/border_width"
        android:paddingBottom="@dimen/border_width">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/popup_header_blue"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_regular"
            android:paddingRight="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_regular">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Purchase Paw"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_large" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_close" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/negative_border_width"
            android:background="@drawable/popup_body"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:layout_weight="1"
                android:background="@drawable/button_white"
                android:orientation="vertical"
                android:padding="@dimen/spacing_small">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Appearance: Glammie sports a vibrant pink fur that sparkles when touched by sunlight. She has crystal blue eyes that have a curious twinkle, popping out against her pink fur. Her paws are tipped with a lighter shade of pink, appearing tentatively white. Personality: Glammie is adventurous and  fiercely independent, always exploring different corners of her world. Despite her  small size, her bravery is legendary among the other characters in the game. Likes: Glammie loves anything shiny, from sparkling gemstones to simple trinkets. She's also a big fan of strawberries - the gameâ€™s main reward items. Her adventurous spirit also means that she spends a lot of time exploring, enjoying new sights and experiences." />
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_blue"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/spacing_medium"
                    android:paddingTop="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_medium"
                    android:paddingBottom="@dimen/spacing_small">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/icon_arrow_left" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_small"
                        android:layout_marginBottom="@dimen/border_width"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Prev"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_blue"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/spacing_medium"
                    android:paddingTop="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_medium"
                    android:paddingBottom="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/border_width"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_medium" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:src="@drawable/icon_arrow_right_thin" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>